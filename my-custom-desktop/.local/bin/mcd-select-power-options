#!/usr/bin/env bash

reboot="reboot\0display\x1f󰜉\t\tReboot\x1fmeta\x1freboot"
shutdown="shutdown\0display\x1f󰤆\t\tShutdown\x1fmeta\x1fshutdown"

selected=$(echo -ne "$reboot\n$shutdown" | rofi -dmenu -no-show-icons -p "Power: " -l 5)

case "$selected" in
    reboot)
        loginctl reboot
        ;;
    shutdown)
        loginctl poweroff
        ;;
esac
