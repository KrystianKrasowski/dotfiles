syntax on
set nocompatible			
set number					
set relativenumber			
set smartindent
set tabstop=4 
set shiftwidth=4
set expandtab
set clipboard=unnamedplus
set cursorline
" Fix timeout for <Esc>
set timeoutlen=1000 ttimeoutlen=0
set backspace=indent,eol,start
set hlsearch

" file navigation
set path+=**
set wildignore+=**/build/**
set wildmenu
set wildoptions=pum,fuzzy
set wildcharm=<Tab>

" color theme
set termguicolors
colorscheme monokai_pro

